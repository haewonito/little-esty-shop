<h1>Edit Discount #<%= @discount.id %></h1>

<%= form_with url: "/merchants/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :discount_percentage %>
  <%= f.number_field :discount_percentage, value: @discount.discount_percentage %><br>
  <%= f.label :threshhold_quantity %>
  <%= f.number_field :threshhold_quantity, value: @discount.threshhold_quantity %><br>
  <%= f.submit 'Update Discount' %><br>
<% end %>
